{
  "name": "image-compressor",
  "version": "1.0.0",
  "description": "Bulk image compression microSaaS tool",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"npm run watch:css\" \"nodemon src/server.js\"",
    "watch:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --minify",
    "docker:build": "docker build -t image-compressor .",
    "docker:run": "docker run -p 3000:3000 --env-file .env image-compressor"
  },
  "keywords": [
    "image",
    "compression",
    "webp",
    "sharp",
    "bulk"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "sharp": "^0.33.5",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
