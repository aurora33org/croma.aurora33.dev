# ========================================
# Server Configuration
# ========================================
PORT=3000
NODE_ENV=production

# ========================================
# Upload Limits (in bytes)
# ========================================
# Maximum file size: 10MB = 10485760 bytes
MAX_FILE_SIZE=10485760

# Maximum number of files per job
MAX_FILES=20

# ========================================
# Cleanup Configuration
# ========================================
# Interval for cleanup job in minutes (runs every N minutes)
CLEANUP_INTERVAL=15

# Time To Live for files in seconds (3600 = 1 hour)
# Files older than this will be automatically deleted
FILE_TTL=3600

# ========================================
# Optional: Listmonk Email Newsletter Integration
# ========================================
# Enable or disable Listmonk integration (true/false)
LISTMONK_ENABLED=false

# Listmonk API URL (e.g., https://listmonk.yourdomain.com)
LISTMONK_URL=

# Listmonk API key for authentication
LISTMONK_API_KEY=

# Listmonk list ID where subscribers will be added
LISTMONK_LIST_ID=
